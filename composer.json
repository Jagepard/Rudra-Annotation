{
    "name"             : "rudra/annotation",
    "description"      : "Rudra framework",
    "type"             : "library",
    "keywords"         : [
        "rudra",
        "annotations",
        "annotation-processing",
        "annotation"
    ],
    "license"          : "MIT",
    "authors"          : [
        {
            "name"    : "Jagepard",
            "email"   : "jagepard@yandex.ru",
            "homepage": "https://jagepard.ru",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "email": "jagepard@yandex.ru"
    },
    "require"          : {
        "php"            : ">=7.2",
        "rudra/exception": "self.version"
    },
    "require-dev"      : {
        "phpunit/phpunit": "^7",
        "victorjonsson/markdowndocs": "dev-master"
    },
    "autoload"         : {
        "psr-4": {
            "Rudra\\": "src/"
        }
    },
    "autoload-dev"     : {
        "psr-4": {
            "Rudra\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config"           : {
        "optimize-autoloader": true,
        "prefer-stable"      : true
    }
}
